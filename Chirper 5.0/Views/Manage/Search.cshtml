@model List<Chirper_5._0.Models.ApplicationUser>

@if (!@Model.Count.Equals(0))
{
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                E-mail
            </th>
            <th>
                Registration date
            </th>
            <th>
                Posts
            </th>
        </tr>
        @foreach (var user in @Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(user.Name, "Index", new { controller = "Manage", userId = user.Id })
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.RegistrationDateTime
                </td>
                <td>
                    @Html.ActionLink(user.Posts.Count.ToString(), "Index", new {controller = "Posts", userId = user.Id})
                </td>
            </tr>
        }
</table>
}
else
{
    <h1>No results for your query</h1>
}